<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <package name="default" namespace="/" extends="struts-default">
        <action name="home" class="com.pagina.action.UsuarioAction" method="getAll">
            <result name="success">/welcome.jsp</result>
        </action>

        <action name="addUsuarioAction"
                class="usuarioAction" method="addUsuario">
            <result name="success">pages/usuario.jsp</result>
        </action>

        <action name="listUsuarioAction"
                class="usuarioAction" method="getAll">
            <result name="success">pages/usuario.jsp</result>
        </action>
    </package>
</struts>
